@model List<Country>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h2>Country List</h2>

<a class="btn btn-primary" asp-controller="Country" asp-action="Create">Add country</a>
<hr />
@if (Model.Count > 0)
{
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model => model[0].Name)</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-controller="Country" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-info">Update</a>
                    <a asp-controller="Country" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </table>
}