@{
}

<h1>Edit product</h1>
<form asp-controller="Product" asp-action="Update" method="post">
    <input asp-for="Id" />
    <div class="mb-3">
        <label asp-for="ProductName">Product name</label>
        <input class="orm-control" asp-for="ProductName" />
        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Price">Price</label>
        <input class="orm-control" asp-for="Price" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Producent">Producent</label>
        <input class="orm-control" asp-for="Producent" />
        <span class="text-danger" asp-validation-for="Producent"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DateOfProduction">Date of production</label>
        <input class="orm-control" asp-for="DateOfProduction" />
        <span class="text-danger" asp-validation-for="DateOfProduction"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description">Description</label>
        <input class="orm-control" asp-for="Description" />
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>


    <button class="btn btn-primary" type="submit">Save</button>
    <button class="btn btn-secondary" type="reset">Reset</button>

</form>