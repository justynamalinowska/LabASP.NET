@{
}

<h1>Add contact</h1>
<form asp-controller="Contact" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name">Name</label>
        <input class="orm-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email">Email</label>
        <input class="orm-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Phone">Phone</label>
        <input class="orm-control" asp-for="Phone" />
        <span class="text-danger" asp-validation-for="Phone"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Birth">Birth</label>
        <input class="orm-control" asp-for="Birth" />
        <span class="text-danger" asp-validation-for="Birth"></span>
    </div>

    <button class="btn btn-primary" type="submit">Create</button>
    <button class="btn btn-secondary" type="reset">Reset</button>

</form>