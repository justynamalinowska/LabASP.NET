@model Dictionary<int, Contact>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<h1>Contacts</h1>
<a class="btn btn-primary" asp-controller="Contact" asp-action="Create">Add contact</a>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            Actions
        </th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>
                @item.Value.Name
            </td>
            <td>
                @item.Value.Email
            </td>     
            <td>
                <a class="btn btn-outline-secondary" asp-controller="Contact" asp-action="Update" asp-route-id="@item.Value.Id">Update</a>
                <a class="btn btn-outline-info" asp-controller="Contact" asp-action="Details" asp-route-id="@item.Value.Id">Details</a>
                <a class="btn btn-outline-info" asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Value.Id">Delete</a>
            </td>

        </tr>
    }


</table>