@{
}

<h1>Add contact</h1>
<form asp-controller="Contact" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email">Email</label>
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Phone">Phone</label>
        <input class="form-control" asp-for="Phone" />
        <span class="text-danger" asp-validation-for="Phone"></span>
    </div>
    <div class="mb-3">
        <label asp-for="OrganizationId"></label>
        <select class="form-control" id="OrganizationId"></select>
        <a asp-action="Create" asp-controller="Organization">Add new organization</a>
    </div>
    <div>
        <label asp-for="Priority"></label>
        <div>
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>
        <select class="form-control" asp-for="Priority" asp-items="@Html.GetEnumSelectList<Priority>()"></select>
    </div>
    <button class="btn btn-primary" type="submit">Create</button>
    <button class="btn btn-secondary" type="reset">Reset</button>

</form>

@section Scripts{
    <script>
        let select = document.getElementById("OrganizationId");
        let filter = document.getElementById("filter");
        filter.onchange = function () {
            if (filter.value.lenght == 0) {
                return;
            }
            fetch(`/api/organization/filter?q=${filter.value}`)
                .then(response => response.json())
                .then(json => {
                    select.innerHTML = '';
                    for (let item of json) {
                        let option = document.createElement('option');
                        option.setAttribute('value', item.id);
                        option.innerText = item.title;
                        select.appendChild(option);
                    }
                })
                // .catch(e => {
                //     console.log('cant get data from api', e);
                // });
        };
    </script>
}
